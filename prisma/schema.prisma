model Issue {
  id          String   @id @default(cuid()) @map("_id") // MongoDB uses String for _id
  title       String
  description String
  status      Status   @default(OPEN)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")
}

enum Status {
  OPEN
  IN_PROGRESS
  CLOSED
}
